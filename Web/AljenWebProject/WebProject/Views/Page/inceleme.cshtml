<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-11">
            <div class="input-group">
                <div class="input-group-prepend">

                </div>
                <a class="btn btn-info btn-group-lg" href="@ViewBag.yol" target="_blank">Pdf'e Git</a>
            </div>
            <br /><hr />
            <div class="input-group">
                <div class="input-group-prepend">

                </div>
                <a class="btn btn-info btn-group-lg" href="@Model.hakem1pdf" target="_blank">Hakem 1 Rapor Pdf'ine Git</a>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">

